{
  "name": "student-portal",
  "version": "1.0.0",
  "description": "Unified Student Companion Portal - MERN Stack Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend-web",
    "mobile"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend-web && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend-web && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend-web && npm install && cd ../mobile && npm install",
    "seed": "cd backend && npm run seed",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend-web && npm test"
  },
  
  "dependencies": {
    "viem": "^2.0.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/qrcode": "^1.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Student Portal Team",
  "license": "MIT"
}