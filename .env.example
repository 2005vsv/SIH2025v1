# ======================
# GLOBAL CONFIGURATION
# ======================

# Environment
NODE_ENV=development

# ======================
# BACKEND CONFIGURATION
# ======================

# Server Configuration
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/studentportal
# For Docker: mongodb://admin:admin123@mongodb:27017/studentportal?authSource=admin
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/studentportal

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_minimum_32_characters
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_STUDENT_URL=http://localhost:3000
FRONTEND_ADMIN_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,csv,xlsx

# ======================
# EMAIL CONFIGURATION
# ======================

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@studentportal.com
EMAIL_FROM_NAME=Student Portal

# ======================
# SMS CONFIGURATION
# ======================

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# ======================
# CHATBOT CONFIGURATION
# ======================

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/webhooks/telegram

# ======================
# PAYMENT CONFIGURATION
# ======================

# Mock Payment Gateway
PAYMENT_GATEWAY_URL=https://api.mockpayment.com
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_SECRET_KEY=your_payment_secret_key
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret

# Razorpay (if using real payment gateway)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe (if using real payment gateway)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ======================
# STORAGE CONFIGURATION
# ======================

# Local Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=student-portal-uploads

# Cloudinary (if using image cloud service)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ======================
# REDIS CONFIGURATION
# ======================

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
SESSION_SECRET=your_session_secret_key

# ======================
# LOGGING CONFIGURATION
# ======================

# Log Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# ======================
# RATE LIMITING
# ======================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# ======================
# BLOCKCHAIN CONFIGURATION
# ======================

# Certificate verification
BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
BLOCKCHAIN_PRIVATE_KEY=your_private_key
CERTIFICATE_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# ======================
# ANALYTICS CONFIGURATION
# ======================

# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX-X

# Internal Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# ======================
# FRONTEND CONFIGURATION
# ======================

# Student Frontend Environment Variables
VITE_API_URL=http://localhost:5000/api
VITE_ADMIN_URL=http://localhost:3001
VITE_APP_NAME=Student Portal
VITE_PAYMENT_PUBLIC_KEY=your_payment_public_key
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Admin Frontend Environment Variables  
VITE_API_URL=http://localhost:5000/api
VITE_STUDENT_URL=http://localhost:3000
VITE_APP_NAME=Admin Panel
VITE_ANALYTICS_ENABLED=true

# ======================
# SECURITY CONFIGURATION
# ======================

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Helmet Configuration
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=false

# HTTPS Configuration (for production)
HTTPS_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# ======================
# MONITORING CONFIGURATION
# ======================

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=student-portal-api
APM_SERVER_URL=http://localhost:8200

# ======================
# BACKUP CONFIGURATION
# ======================

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ======================
# DEVELOPMENT CONFIGURATION
# ======================

# Development Mode Settings
DEV_CORS_ENABLED=true
DEV_MORGAN_ENABLED=true
DEV_SEED_DATA=true
DEV_RESET_DB=false

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/studentportal_test
TEST_JWT_SECRET=test_jwt_secret
TEST_TIMEOUT=30000

# ======================
# PRODUCTION CONFIGURATION
# ======================

# Production Security
PRODUCTION_HTTPS_ONLY=true
PRODUCTION_SECURE_COOKIES=true
PRODUCTION_TRUST_PROXY=true

# Production Performance
PRODUCTION_CLUSTER_MODE=true
PRODUCTION_WORKERS=auto
PRODUCTION_CACHE_ENABLED=true

# Production Monitoring
PRODUCTION_ERROR_REPORTING=true
PRODUCTION_PERFORMANCE_MONITORING=true